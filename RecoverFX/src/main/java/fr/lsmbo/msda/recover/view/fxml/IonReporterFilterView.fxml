<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="335.0" prefWidth="477.0"
	xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111"
	fx:controller="fr.lsmbo.msda.recover.view.IonReporterFilterController">
	<children>
		<BorderPane layoutX="13.0" layoutY="7.0" prefHeight="322.0"
			prefWidth="452.0">
			<center>
				<GridPane prefHeight="147.0" prefWidth="160.0"
					BorderPane.alignment="CENTER">
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
							prefWidth="100.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints maxHeight="156.0" minHeight="10.0"
							prefHeight="102.0" vgrow="SOMETIMES" />
						<RowConstraints maxHeight="226.0" minHeight="10.0"
							prefHeight="220.0" vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label prefHeight="113.0" prefWidth="471.0"
							text="Please use the table below to add ions. The filter will mark the spectrum recover if at least one ion is found (m/z +/- the tolerance)."
							textAlignment="JUSTIFY" wrapText="true">
							<font>
								<Font size="18.0" />
							</font>
						</Label>
						<TableView fx:id="tableIonReporter" prefHeight="200.0"
							prefWidth="200.0" GridPane.rowIndex="1">
							<columns>
								<TableColumn fx:id="colMoz" editable="true"
									prefWidth="75.0" text="m/z" />
								<TableColumn fx:id="colTolerance" editable="true"
									prefWidth="75.0" text="tolerance" />
								<TableColumn fx:id="colName" editable="true"
									prefWidth="75.0" text="name" />
							</columns>
							<columnResizePolicy>
								<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
							</columnResizePolicy>
						</TableView>
					</children>
				</GridPane>
			</center>
		</BorderPane>
	</children>
</AnchorPane>
