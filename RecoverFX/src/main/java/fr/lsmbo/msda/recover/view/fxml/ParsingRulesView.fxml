<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="404.0" prefWidth="416.0"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="fr.lsmbo.msda.recover.view.ParsingRulesController">
	<bottom>
		<HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity"
			prefHeight="40.0" prefWidth="416.0" BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="btnApply" defaultButton="true"
					mnemonicParsing="false" onAction="#handleClickBtnApply" text="Apply">
					<HBox.margin>
						<Insets right="10.0" />
					</HBox.margin>
				</Button>
				<Button fx:id="btnCancel" cancelButton="true"
					mnemonicParsing="false" onAction="#handleClickBtnCancel" text="Cancel">
					<HBox.margin>
						<Insets left="10.0" />
					</HBox.margin>
				</Button>
			</children>
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
		</HBox>
	</bottom>
	<center>
		<TableView fx:id="table" focusTraversable="false"
			prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn fx:id="colTitle" prefWidth="75.0" text="Title" />
				<TableColumn fx:id="colNewRT" prefWidth="75.0" text="Retention time" />
			</columns>
		</TableView>
	</center>
	<top>
		<GridPane BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
					prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
					prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
					prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="Select a parsing rule" />
				<ComboBox fx:id="cmbParsingRules" onAction="#handleChangeParsingRule"
					prefWidth="150.0" GridPane.columnIndex="1" GridPane.columnSpan="2" />
				<Label text="Selected parsing rule" GridPane.rowIndex="1" />
				<TextField fx:id="txtRegex" GridPane.columnIndex="1"
					GridPane.rowIndex="1" />
				<Button fx:id="btnTryIt" mnemonicParsing="false" onAction="#handleClickTryIt"
					text="Check" GridPane.columnIndex="2" GridPane.rowIndex="1" />
				<Label
					text="Result of the parsing rule on some titles from the current file"
					GridPane.columnSpan="3" GridPane.rowIndex="2" />
			</children>
		</GridPane>
	</top>
</BorderPane>
