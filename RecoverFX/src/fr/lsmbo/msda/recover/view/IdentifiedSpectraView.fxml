<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="319.0" prefWidth="501.0"
	xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="fr.lsmbo.msda.recover.view.IdentifiedSpectraController">
	<children>
		<BorderPane prefHeight="320.0" prefWidth="501.0">
			<center>
				<GridPane BorderPane.alignment="CENTER">
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
							prefWidth="100.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints maxHeight="154.0" minHeight="10.0"
							prefHeight="70.0" vgrow="SOMETIMES" />
						<RowConstraints maxHeight="260.0" minHeight="10.0"
							prefHeight="250.0" vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label prefHeight="81.0" prefWidth="504.0"
							text="Please insert below the title of your spectrum you want to identify.  Just one title per line !"
							textAlignment="JUSTIFY" textFill="#9e1717" wrapText="true">
							<font>
								<Font size="18.0" />
							</font>
						</Label>
						<TextArea fx:id="titles" prefHeight="200.0" prefWidth="200.0"
							GridPane.rowIndex="1" />
					</children>
				</GridPane>
			</center>
			<bottom>
				<HBox prefHeight="30.0" prefWidth="501.0" BorderPane.alignment="CENTER">
					<children>
						<Button fx:id="apply" mnemonicParsing="false"
							onAction="#applyIdentificationOfSpectrum" text="Apply">
							<HBox.margin>
								<Insets left="225.0" top="2.0" />
							</HBox.margin>
						</Button>
						<Button fx:id="importTitlesFromExcel" mnemonicParsing="false"
							text="Import from Excel...">
							<HBox.margin>
								<Insets left="110.0" top="2.0" />
							</HBox.margin>
						</Button>
					</children>
				</HBox>
			</bottom>
		</BorderPane>
	</children>
</AnchorPane>
